<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    android:padding="8dp">

    <Spinner
        android:fontFamily="@font/quicksand_semibold"
        android:id="@+id/spinnerProvincia"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:spinnerMode="dialog"
        android:entries="@array/array_provincias">
    </Spinner>

    <Spinner
        android:id="@+id/spinnerLocalidad"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="8dp"
        android:spinnerMode="dialog"
        android:entries="@array/array_localidades_ba"
        android:fontFamily="@font/quicksand_semibold">
    </Spinner>

    <EditText
        android:id="@+id/editTextCalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fontFamily="@font/quicksand_regular"
        android:hint="Calle"></EditText>

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:layout_margin="8dp">


        <EditText
            android:inputType="number"
            android:layout_weight="1"
            android:id="@+id/editTextNro"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:hint="Nro"></EditText>

        <EditText
            android:inputType="number"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:id="@+id/editTextPiso"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:hint="Piso"></EditText>

        <EditText
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:id="@+id/editTextDepto"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:hint="Depto"></EditText>

    </LinearLayout>

</LinearLayout>

    <Button
        android:id="@+id/buttonConfirmarUbicacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:paddingBottom="2dp"
        android:background="@drawable/background_button_default"
        android:fontFamily="@font/quicksand_bold"
        android:text="Confirmar direcciÃ³n"
        android:textColor="@color/buttonDefaultTextColor"

        />
    <TextView
        android:id="@+id/buttonIntroducirManual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginBottom="10dp"
        android:background="@null"
        android:fontFamily="@font/quicksand_bold"
        android:text="VOLVER AL MAPA"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary" />
</LinearLayout>